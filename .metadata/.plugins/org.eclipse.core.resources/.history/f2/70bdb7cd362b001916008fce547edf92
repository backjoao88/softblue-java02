package jpb.exercicio3;

import java.util.concurrent.locks.Condition;
import java.util.concurrent.locks.ReentrantLock;

public class Buffer {

	private final int MAX_ITENS_BUFFER = 10;
	private final int MIN_ITENS_BUFFER = 0;

	private int itens = 0;
	private ReentrantLock lock = new ReentrantLock();
	private Condition condition = lock.newCondition();

	public int getItens() {
		return itens;
	}

	public void incrementar() {
		lock.lock();
		try {
			while (this.itens > MAX_ITENS_BUFFER) {
				try {
					condition.await();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
			this.itens = itens + 1;
			mostrarSituacaoBuffer();
		} finally {
			lock.unlock();
		}
	}

	private void mostrarSituacaoBuffer() {
		System.out.println("O buffer está atualmente com "+getItens()+" itens.");
	}

	public void decrementar() {
		lock.lock();
		try {
			while (this.itens < MIN_ITENS_BUFFER) {
				try {
					condition.await();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
			this.itens = itens - 1;
		} finally {
			lock.unlock();
		}
	}

	public int getMaxItensBuffer() {
		return MAX_ITENS_BUFFER;
	}

	public int getMinItensBuffer() {
		return MIN_ITENS_BUFFER;
	}

	@Override
	public String toString() {
		StringBuilder builder = new StringBuilder();
		builder.append("Buffer [itens=");
		builder.append(itens);
		builder.append("]");
		return builder.toString();
	}

}
